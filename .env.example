DEBUG_DISCORD_ID=123456789012345678  # Your Discord ID for testing/debug commands
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

NODE_ENV=production              # Set to 'production' to prevent double command registration
FORCE_REGISTER_ON_STARTUP=false  # Set to 'true' to force command registration on bot startup

# Bot Configuration
BOT_NAME=MafiaWar                # Name of your bot (e.g., "The Nexus Wars", "Criminal Empire")
BOT_THEME_COLOR=0x800080         # Primary color for embeds (hex color code)
BOT_CURRENCY_SYMBOL=$            # Currency symbol (e.g., "$", "₦", "€")
BOT_CURRENCY_NAME=dollars        # Currency name (e.g., "dollars", "credits", "tokens")

# Cryptocurrency Configuration
CRYPTO_NAME=MafiaCoin            # Name of your cryptocurrency (e.g., "SafeCoin", "RiskCoin")
CRYPTO_SYMBOL=MAFIA              # Symbol/ticker for your crypto (e.g., "SAFE", "RISK")
CRYPTO_DESCRIPTION="The official cryptocurrency of the criminal underworld."
CRYPTO_BASE_PRICE=1337           # Starting price
CRYPTO_VOLATILITY=0.35           # Price volatility (0.1 = stable, 0.5 = very volatile)

# Optional Feature Toggles (defaults to true)
# BOT_ENABLE_CRYPTO=true
# BOT_ENABLE_GANGS=true  
# BOT_ENABLE_ASSETS=true

# SQLite Database Configuration
DATABASE_URL="file:./data/mafiawar.db"

# Write Queue Configuration
WRITE_QUEUE_BATCH_SIZE=10        # Number of operations to process per batch
WRITE_QUEUE_INTERVAL=1000        # Processing interval in milliseconds
WRITE_QUEUE_MAX_RETRIES=3        # Maximum retry attempts for failed operations

# VPS Deployment Configuration (for PM2)
VPS_HOST=your_vps_ip_address
VPS_USER=username
BOT_CWD=/home/username/projects/discord/mafiawar